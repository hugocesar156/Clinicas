@{
    ViewData["Title"] = "Entrada";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinicas</title>

    <link href="~/lib/bootstrap-5.1.0-dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row text-center mt-4">
            <h4>Clínicas - Entrar</h4>
        </div>
        <form action="/" method="post">
            <div class="row justify-content-center">
                <div class="col-4 mt-5">
                    <label>Usuário</label>
                    <input class="form-control" type="text" name="email" />
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-4 mt-4">
                    <label>Senha</label>
                    <input class="form-control" type="password" name="senha" />
                </div>
            </div>
            <div class="row justify-content-center mt-5">
                <button class="col-4 btn btn-success">Entrar</button>
            </div>
        </form>
        <footer class="text-center mt-5">
            <p>&copy; 2021 - Clinicas</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-5.1.0-dist/js/bootstrap.min.js"></script>
</body>
</html>