@model IPagedList<Clinicas.Models.Funcionario.Funcionario>

@{
    ViewData["Title"] = "Lista de clínicas";
}

<div id="row-titulo" class="row text-center">
    <div class="col">
        <h4>Funcionários registradas</h4>
    </div>
</div>

@if (Model.PageCount > 0)
{
    <form asp-action="AtualizarLista" id="formulario-busca" data-ajax="true" data-ajax-method="get" data-ajax-update="#area-tabela">
        <div class="row justify-content-center mt-3">
            <div class="col-8">
                <a class="btn btn-success" href="@Url.Action("Cadastro", "Funcionario")">Novo registro</a>
            </div>
            <div class="col-2">
                <input class="form-control form-control-sm" type="text" name="pesquisa"
                       placeholder="Buscar" onkeyup="$('#formulario-busca').submit()" />
            </div>
        </div>
        <input type="hidden" name="pagina" value="@Model.PageNumber" />
    </form>
}

<div id="area-tabela">
    @await Html.PartialAsync("Tabela", Model)
</div>